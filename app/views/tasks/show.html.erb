<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Completed task :
  <% if @task.completed == true %><i class="far fa-check-square"></i>
  <% else %> <i class="far fa-times-circle"></i>
  <% end %>
</p>
<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</p>
<%= link_to "Edit task", edit_path(@task) %>
<p><%= link_to "Back to list", tasks_path %></p>
<% console %>
