<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" id="tasks_details" name="tasks_details">
    <label for="tasks_details">
      <%= link_to task.title, task_path(id: task.id)%>
    </label>
  </div>
  <p>"Details : <%= task.details %>"</p>
<% end %>
<%= link_to "Add a new task", tasks_new_path %>
