<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <div>
    <% if task.completed == true %><i class="far fa-check-square"></i>
    <% else %> <i class="far fa-times-circle"></i>
    <% end %>
    <%= link_to task.title, task_path(id: task.id)%>
  </div>
  <p>"Details : <%= task.details %>"</p>


<% end %>
<%= link_to "Add a new task", tasks_new_path %>
